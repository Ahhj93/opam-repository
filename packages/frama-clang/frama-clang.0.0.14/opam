depends: [
  "dune" {>= "3.2"}
  "frama-c" {>= "27.0~" & < "28.0~"}
  "zarith" {>= "1.5"}
  "camlp5"
  "camlp-streams"
  "conf-llvm" {>= "11.0.0"}
  "conf-libclang" {>= "11.0.0"}
  "conf-clang" { os-family = "debian" }
  "conf-cmake"
  "odoc" {with-doc}
]
build: [
  ["dune" "subst"] {dev}
  [
    "dune"
    "build"
    "-p"
    name
    "-j"
    jobs
    "--promote-install-files=false"
    "@install"
    "@runtest" {with-test}
    "@doc" {with-doc}
  ]
  ["dune" "install" "-p" name "--create-install-files" name]
]

